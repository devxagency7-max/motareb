rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // ================= USERS =================
    match /users/{userId} {
      allow create: if isAuth() && request.auth.uid == userId;
      allow read, update, delete: if isAuth() && (request.auth.uid == userId || isAdmin());
    }

    // ================= PROPERTIES =================
    match /properties/{propertyId} {
      // Anyone can read properties (Public)
      allow read: if true;
      
      // Only Admin can create, update, or delete
      allow write: if isAdmin();
    }

    // ================= UNIVERSITIES =================
    match /universities/{universityId} {
       allow read: if true;
       allow write: if isAdmin();
    }

    // ================= CHATS =================
    match /chats/{chatId} {
      allow read, write: if isAuth() && (request.auth.uid == chatId || isAdmin());
      
      match /messages/{messageId} {
        allow read, write: if isAuth(); 
      }
    }

    // ================= CONTACT NUMBERS =================
    match /contact_numbers/{numberId} {
      allow read, write: if true;
    }
    
    // Default: Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
